<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/bank_title"
        style="@android:style/TextAppearance.DeviceDefault.SearchResult.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/bid"
        android:layout_toStartOf="@+id/bid"
        android:ellipsize="end"
        tools:text="Privatbank" />

    <TextView
        android:id="@+id/bid"
        style="@android:style/TextAppearance.DeviceDefault.SearchResult.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bank_title"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_toLeftOf="@+id/ask"
        android:layout_toStartOf="@+id/ask"
        android:paddingEnd="24dp"
        android:paddingRight="24dp"
        tools:text="25.87" />

    <TextView
        android:id="@+id/ask"
        style="@android:style/TextAppearance.DeviceDefault.SearchResult.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bank_title"
        android:layout_alignParentRight="true"
        tools:text="26.00" />

    <TextView
        android:id="@+id/bid_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bid"
        android:layout_alignRight="@+id/bid"
        android:layout_below="@+id/bid"
        android:paddingRight="24dp"
        tools:text="-0.54" />

    <TextView
        android:id="@+id/ask_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ask"
        android:layout_below="@+id/ask"
        tools:text="+005" />
</RelativeLayout>

